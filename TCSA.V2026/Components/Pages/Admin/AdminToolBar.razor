<MudPaper Elevation="25">
    <MudToolBar>
        <MudIconButton Icon="@Icons.Material.Outlined.List" OnClick="NavigateToMain"/>
        <MudIconButton Icon="@Icons.Material.Outlined.Search" OnClick="NavigateToSearch" />
        <MudIconButton Icon="@Icons.Material.Outlined.PendingActions" OnClick="NavigateToPending" />
        <MudIcon Icon="@Icons.Material.Outlined.Numbers" /> 
        <MudText Style="font-weight: 600; font-size:large">@Count</MudText>
    </MudToolBar>
</MudPaper>

@code {
    [Parameter] public int? Count { get; set; }

    [Inject] private NavigationManager Navigation { get; set; }

    private void NavigateToMain()
    {
        Navigation.NavigateTo("/admin");
    }

    private void NavigateToSearch()
    {
        Navigation.NavigateTo("/adminsearch");
    }

    private void NavigateToPending()
    {
        Navigation.NavigateTo("/adminpending");
    }
}
